{
  "startPath": "/",
  "modules": [
    {
      "id": "home",
      "moduleUrl": "/modules/home/module.js",
      "startPath": "/",
      "routes": [
        { "path": "/" }
      ],
      "layout": {
        "desktop": {
          "nav": {
            "title": "Home",
            "path": "/"
          },
          "aside": {
            "home": "home-aside-action"
          },
          "footer": {
            "home": "home-footer-action"
          }
        },
        "mobile": {
          "header": {
            "home": "home-header-action"
          },
          "aside": {
            "home": "home-aside-action"
          },
          "bar": {
            "home": "home-footer-action"
          }
        }
      }
    },
    {
      "id": "products",
      "moduleUrl": "/modules/products/module.js",
      "startPath": "/products",
      "routes": [
        { "path": "/products" }
      ],
      "layout": {
        "desktop": {
          "nav": {
            "title": "Products",
            "path": "/products"
          },
          "header": {
            "search": {
              "component": "products-header-action",
              "type": "placeholder",
              "position": "right",
              "order": 40,
              "placeholder": {
                "type": "icon",
                "icon": "search"
              }
            }
          }
        }
      }
    },
    {
      "id": "basket",
      "moduleUrl": "/modules/basket/module.js",
      "startPath": "/basket",
      "preload": true,
      "routes": [
        { "path": "/basket" }
      ],
      "layout": {
        "desktop": {
          "nav": {
            "title": "Basket",
            "path": "/basket"
          },
          "header": {
            "basket": {
              "component": "basket-header-action",
              "type": "placeholder",
              "position": "right",
              "order": 50,
              "placeholder": {
                "type": "icon",
                "icon": "basket"
              }
            }
          }
        }
      }
    },
    {
      "id": "checkout",
      "moduleUrl": "/modules/checkout/module.js",
      "startPath": "/checkout",
      "routes": [
        { "path": "/checkout" }
      ]
    },
    {
      "id": "profile",
      "moduleUrl": "/modules/profile/module.js",
      "startPath": "/profile",
      "routes": [
        { "path": "/profile" }
      ],
      "layout": {
        "desktop": {
          "header": {
            "signIn": {
              "component": "sign-in-action",
              "type": "link",
              "position": "right",
              "order": 10,
              "link": {
                "path": "/profile",
                "text": "Sign In"
              }
            },
            "createAccount": {
              "component": "create-account-action",
              "type": "link",
              "position": "right",
              "order": 11,
              "link": {
                "path": "/profile",
                "text": "Create Account"
              }
            }
          }
        }
      }
    }
  ]
}
