{
  "startPath": "/",
  "messages": {
    "en": {
      "appTitle": "Plant Store"
    }
  },
  "modules": [
    {
      "id": "home",
      "moduleUrl": "/modules/home/module.js",
      "startPath": "/",
      "routes": [
        { "path": "/" }
      ],
      "messages": {
        "en": {
          "navTitle": "Home"
        }
      },
      "layout": {
        "desktop": {
          "nav": {
            "home": {
              "titleI18n": "home.navTitle",
              "path": "/"
            }
          },
          "aside": {
            "home": {
              "titleI18n": "home.navTitle",
              "path": "/"
            }
          },
          "footer": {
            "home": {
              "titleI18n": "home.navTitle",
              "path": "/"
            }
          }
        },
        "mobile": {
          "header": {
            "home": {
              "titleI18n": "home.navTitle",
              "path": "/"
            }
          },
          "aside": {
            "home": {
              "titleI18n": "home.navTitle",
              "path": "/"
            }
          },
          "bar": {
            "home": {
              "titleI18n": "home.navTitle",
              "path": "/"
            }
          }
        }
      }
    },
    {
      "id": "products",
      "moduleUrl": "/modules/products/module.js",
      "startPath": "/products",
      "routes": [
        { "path": "/products" },
        { "path": "/products/search" }
      ],
      "messages": {
        "en": {
          "navTitle": "Products"
        }
      },
      "layout": {
        "desktop": {
          "nav": {
            "products": {
              "titleI18n": "products.navTitle",
              "path": "/products"
            }
          },
          "header": {
            "search": {
              "type": "link",
              "position": "right",
              "order": 40,
              "link": {
                "type": "icon",
                "path": "/products/search",
                "icon": "search"
              }
            }
          }
        }
      }
    },
    {
      "id": "basket",
      "moduleUrl": "/modules/basket/module.js",
      "startPath": "/basket",
      "preload": true,
      "routes": [
        { "path": "/basket" }
      ],
      "messages": {
        "en": {
          "navTitle": "Basket"
        }
      },
      "layout": {
        "desktop": {
          "nav": {
            "basket": {
              "titleI18n": "basket.navTitle",
              "path": "/basket"
            }
          },
          "header": {
            "basket": {
              "type": "component",
              "component": "basket-header-action",
              "position": "right",
              "order": 50,
              "placeholder": {
                "type": "icon",
                "icon": "basket"
              }
            }
          }
        }
      }
    },
    {
      "id": "checkout",
      "moduleUrl": "/modules/checkout/module.js",
      "startPath": "/checkout",
      "routes": [
        { "path": "/checkout" }
      ]
    },
    {
      "id": "profile",
      "moduleUrl": "/modules/profile/module.js",
      "startPath": "/profile",
      "messages": {
        "en": {
          "header": {
            "signIn": "Sign In",
            "signUp": "Sign Up"
          }
        }
      },
      "routes": [
        { "path": "/profile/sign-in" },
        { "path": "/profile/sign-up" },
        { "path": "/profile/forgot-password" },
        { "path": "/profile/reset-password" },
        { "path": "/profile/account" }
      ],
      "layout": {
        "desktop": {
          "header": {
            "signIn": {
              "type": "component",
              "component": "profile-sign-in-header-action",
              "position": "right",
              "order": 10,
              "placeholder": {
                "type": "text",
                "textI18n": "profile.header.signIn"
              }
            },
            "account": {
              "type": "component",
              "component": "profile-account-header-action",
              "position": "right",
              "order": 11,
              "placeholder": {
                "type": "text",
                "textI18n": "profile.header.signUp"
              }
            }
          }
        }
      }
    }
  ]
}
